div#article-window.hide
 form(action="/article/submit" method='post' id="article-window-form")
  div.k-content.form-item
   label 文章标题
   input(type='text' class='k-textbox' name='title')
  div.k-content.form-item
   label 文章说明
   textarea(name='description' class='k-textbox')
  div.k-content.form-item
   label 图片地址
   input(type='text' class='k-textbox' name='img')
  div.k-content.form-item
   label 导航标识
   input(type='text' class='k-textbox' readonly='readonly' name='navId' id="navId-input")
  div.k-content.form-item
   label 所属分类
   span#blog-cateory
  div.k-content.form-item
   button(class='k-button k-default' type='submit') 添加
div#article-detail-window.hide
  form( id="article-detail-window-form")
   div.k-content.form-item
    label 文章标题
    input(type='text' class='k-textbox' name='title' id="article_detail_title")
   div.k-content.form-item
    label 文章标识
    input(type='text' class='k-textbox' name='title' id="article_detail_articleId")
   div.k-content.form-item
    textarea#article-detail-content
   div.k-content.form-item
    button.k-button#article_detail_submit(type='button') 提交
form(id="articleUpdateForm" action="/article/update" method="post").hide
   div.k-content.form-item
    label 文章标题
    input(type='text' class='k-textbox' name='title' id="article-update-title")
   div.k-content.form-item
    label 文章说明
    textarea(name="description")#article-update-description.k-textbox
   div.k-content.form-item
    label 图片地址
    input(name="img")#article-update-img.k-textbox
   div.k-content.form-item
    label 导航标识
    input(name="navId")#article-update-navId.k-textbox
   div.k-content.form-item
    label 文章标识
    input(name="articleId")#article-update-articleId.k-textbox
   div.k-content.form-item
    label 所属类别
    input(name="categoryId")#article-update-categoryId.k-textbox
   div.k-content.form-item
    button.k-button.k-primary 更新文章
