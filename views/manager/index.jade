doctype html
html
  head
    meta(charst='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    title = title
    link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.table.css')
    link(rel='stylesheet', href='/css/common.css')
    link(rel='stylesheet', href='/css/manager.css')
    script(src="/lib/require/require.js" data-main="/js/main-manager")
  body
    include ./header.jade
    aside.aside-bar 
      include ./aside/index.jade
    main.main#main
      ul.breadcrumb
        li 当前位置: 首页 
      section
        header#toolbar
          div.btn-group#common-dropdown
            button.btn.btn-info(nextstep='#introForm')
              i.glyphicon.glyphicon-plus 
              span 新增
            button.btn.btn-default.dropdown-menu-active 请选择主题
            button.btn.btn-default.dropdown-toggle(data-toggle="dropdown" aria-expanded="false") 
              span.caret
                span.sr-only 
            ul.dropdown-menu.drop-menu-right(role='menu')
          include ./articles/index.jade
        table#table
      include ./home/index.jade
      include ./categories/index.jade
