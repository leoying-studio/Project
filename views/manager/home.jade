div#banner-window.k-content(style="display:none;")
     form(action="/banner/submit" method="post")
       div.k-content.form-item
        label 轮播背景 
        input(type="text" class="k-textbox" name="background")
       div.k-content.form-item
        label 轮播标题 
        input(type="text" class="k-textbox" name="title")
       div.k-content.form-item
        label 轮播字幕 
        input(type="text" class="k-textbox" name="caption")
       div.k-content.form-item
        label 轮播说明 
        textarea(class="k-textbox" name="description")
       div.k-content.form-item
        button(type="submit" class="k-button k-default") 确认添加
