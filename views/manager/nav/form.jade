form(action="/article/submit" method='post' id="articleForm")
  div.k-content.form-item
    label 文章标题
    input(type='text' class='k-textbox' name='title')
  div.k-content.form-item
    label 文章说明
    textarea(name='description' class='k-textbox')
  div.k-content.form-item
    label 图片地址
    input(type='text' class='k-textbox' name='img')
  div.k-content.form-item
